pipeline {
    agent any

    environment {
        myuser = credentials ('dockerhub-user')
        mypassword = credentials ('dockerhub-password')
    }

    stages {
        stage ('download the code') {
            steps {
                sh 'git clone https://github.com/SoftwareDevDeveloper/container101.git'
            }
        }

        stage ('build image') {
            steps {
                sh '''
                   cd container101
                   docker build -t shegoj/marcifx:v1 .
                '''
            }
        }
        stage ('publish image') {
            steps {
               sh '''
                docker login -u $myuser -p $mypassword
                docker push shegoj/marcifx:v1
              '''
           }
        }
       stage ('deploy app') {
            steps {
               sh '''
                docker rm -f nationapp | echo ""
                docker run --name nationapp --rm -d -p 5007:5000 shegoj/marcifx:v2
              '''
           }
       }
    }

    post {
        always {
            deleteDir()
        }
    }
}